<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/checkbox_size"
                android:height="@dimen/checkbox_size" />
            <solid android:color="@color/white" />
            <stroke
                android:width="1px"
                android:color="@color/black"
                android:dashGap="0px"
                android:dashWidth="1px" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/radio_button_selection_padding"
        android:left="@dimen/radio_button_selection_padding"
        android:right="@dimen/radio_button_selection_padding"
        android:top="@dimen/radio_button_selection_padding">
        <shape android:shape="oval">
            <size
                android:width="@dimen/radio_button_selection_size"
                android:height="@dimen/radio_button_selection_size" />

            <solid android:color="@color/black" />
        </shape>
    </item>
</layer-list>